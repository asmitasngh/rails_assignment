<script>
	$(function() {
		$( "#tabs" ).tabs({
			beforeLoad: function( event, ui ) {
				ui.jqXHR.error(function() {
					ui.panel.html("Couldn't load this tab. We'll try to fix this as soon as possible. If this wouldn't be 						a demo.");
				});
			}
		});
	});
</script>



<div id="tabs">
<ul>
<li><a href="#tabs-1">Home</a></li>
