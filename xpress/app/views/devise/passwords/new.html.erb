
<div id="he">
<h2><center>Forgot your password?</center></h2></div>
<table align='center' cellspacing='10px' border='0px'>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
<tr><td>
  <%= f.label :email %></td><td>
  <%= f.email_field :email, :autofocus => true %></td></tr></table>

 <table align='center' cellspacing='10px' border='0px'>
<tr><td><%= f.submit "Send me reset password instructions" %></td></tr></table>
<% end %>

